<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        >

        <TextView
            android:id="@+id/tvNomorLeaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_leaderboard_circle">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgLeaderboard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
               android:layout_centerVertical="true"
                android:src="@drawable/programmer" />

            <TextView
                android:id="@+id/tvNameLeaderboard"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="9dp"
                android:text="Mesut Kurtis"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvSekolahLeaderboard"
                android:layout_below="@id/tvNameLeaderboard"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:text="Politeknik Negri Turki"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvClassLeaderboard"
                android:layout_width="wrap_content"
                android:layout_below="@+id/tvSekolahLeaderboard"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Flutter Basic"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvScoreLeaderboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:text="2000"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>